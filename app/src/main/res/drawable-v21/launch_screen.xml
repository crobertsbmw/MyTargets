<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:opacity="opaque">
    <!-- The background color, preferably the same as your normal theme -->
    <item android:drawable="@color/mantisBlack"/>
    <!-- App logo - 144dp color version of the app icon -->
    <item android:bottom="300dp">
        <bitmap
            android:gravity="center"
            android:src="@drawable/product_logo_144dp"/>
    </item>
    <!-- Brand name - 48dp height -->
    <item
        android:bottom="400dp"
        android:drawable="@drawable/brand_name"
        android:gravity="bottom|center"/>
    <item android:bottom="120dp">
        <bitmap
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:src="@drawable/mantis_logo_lg" />
    </item>

</layer-list>
